<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  <display-name>PhoneBook on Servlets</display-name>

  <servlet>
    <servlet-name>getAllContactsServlet</servlet-name>
    <servlet-class>ru.academits.filimonov.servlet.GetAllContactsServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>AddContactsServlet</servlet-name>
    <servlet-class>ru.academits.filimonov.servlet.AddContactServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>DeleteContactServlet</servlet-name>
    <servlet-class>ru.academits.filimonov.servlet.DeleteContactServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>GetFilteredContactsServlet</servlet-name>
    <servlet-class>ru.academits.filimonov.servlet.GetFilteredContactsServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>DeleteContactsServlet</servlet-name>
    <servlet-class>ru.academits.filimonov.servlet.DeleteContactsServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>getAllContactsServlet</servlet-name>
    <url-pattern>/phonebook/get/all</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>AddContactsServlet</servlet-name>
    <url-pattern>/phonebook/add</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>DeleteContactServlet</servlet-name>
    <url-pattern>/phonebook/deleteContact</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>GetFilteredContactsServlet</servlet-name>
    <url-pattern>/phonebook/get/filteredContacts</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>DeleteContactsServlet</servlet-name>
    <url-pattern>/phonebook/deleteContacts</url-pattern>
  </servlet-mapping>
</web-app>
